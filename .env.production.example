# Environment
NODE_ENV="production"

# Database connection for application (Prisma)
DATABASE_URL="postgresql://pocket_ledger:your_strong_password@localhost:5432/pocket_ledger?schema=public"

# PostgreSQL Configuration
POSTGRES_DB=pocket_ledger
POSTGRES_USER=pocket_ledger
POSTGRES_PASSWORD=your_strong_password

# Application Settings
PORT=3000
NEXT_PUBLIC_API_URL="https://api.your-domain.com"

# Security Settings
SESSION_SECRET="your-strong-session-secret-key"

# Rate Limiting
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="error"

# Note: 请将此文件复制为.env.production并替换所有敏感信息